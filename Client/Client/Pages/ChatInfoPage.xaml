<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Client.Domain.Entitites;assembly=Client.Domain"
             xmlns:icons="clr-namespace:Client.Icons"
             x:Class="Client.Pages.ChatInfoPage"
             Loaded="OnPageLoaded">
    
    <Grid RowDefinitions="*, 8*"
          ColumnDefinitions="*">
        <Border Grid.Row="0">
            <Grid ColumnDefinitions="12*,*,*">
                <Label x:Name="chatNameLabel"
                       Grid.Column="0"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>

                <Button Grid.Column="1"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Margin="1"
                        Clicked="OnEditChatEntyClicked">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FluentIcons"
                                         Glyph="{x:Static icons:Icons.Edit}"
                                         Color="#242424"
                                         Size="25"/>
                    </Button.ImageSource>
                </Button>

                <Button Grid.Column="2"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Margin="1"
                        Clicked="OnAddUserClicked">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FluentIcons"
                                         Glyph="{x:Static icons:Icons.PersonAdd}"
                                         Color="#242424"
                                         Size="25"/>
                    </Button.ImageSource>
                </Button>
            </Grid>
        </Border>
        <CollectionView x:Name="chatMembersView"
                        ItemsLayout="VerticalList"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:User">
                    <Border Margin="5"
                            StrokeShape="RoundRectangle 40, 40, 40, 40">
                        <Grid ColumnDefinitions="9*,*">
                            <Label Grid.Column="0"
                                   Text="{Binding Name}"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   Margin="10"/>

                            <Button Grid.Column="1"
                                    BackgroundColor="Red"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill"
                                    Clicked="OnDeleteUserClicked"
                                    CommandParameter="{Binding}">
                                <Button.ImageSource>
                                    <FontImageSource FontFamily="FluentIcons"
                                                     Glyph="{x:Static icons:Icons.PersonDelete}"
                                                     Color="#242424"
                                                     Size="25"/>
                                </Button.ImageSource>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>