<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Client.Domain.Entitites;assembly=Client.Domain"
             x:Class="Client.Pages.ChatInfoPage"
             Title="ChatInfoPage"
             Loaded="OnPageLoaded">
    <Grid RowDefinitions="*, 8*"
          ColumnDefinitions="*">
        <Border>
            <!--Info about chat (name and it's editing)-->
        </Border>
        <CollectionView x:Name="chatMembersView"
                        ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:User">
                    <Border Margin="5"
                            StrokeShape="RoundRectangle 40, 40, 40, 40">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   Margin="10"
                            />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>